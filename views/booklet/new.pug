extends ../layout
block content
  script(type='text/javascript' src='/js/new_booklet_page.js')
  .d.flex-grow-1.bg-white.rounded.shadow-5-strong.p-5.me-2.my-2.mx-2
      h2.text-center Create Booklet
      div.form-group
        span Booklet Name
        .div.form-outline.mb-4
          input.form-control(type='text' id='bookletname' name='bookletname')
          label.form-label(for='bookletname') Name
        .row
         span(align="center") Add Selections to the Booklet
         .col.drop_target
          table.table.table-sm
           thead.table-light
            tr
             td 
               i.fa-solid.fa-bars
             td
              span Nickname
             td
              span Book
            tbody
             each split in splits
              tr(draggable="true")
               td 
                i.fa-solid.fa-bars.pe-2
               td
                span #{split.nickname}
               td
                span #{split.book}
         .col.drop_target
          table.table.table-sm
             thead.table-light
               tr
                td 
                 i.fa-solid.fa-bars
                td
                 span Nickname
                td
                 span Book
             tbody(id="tbody_destination")
        .row
          button.btn.btn-lg.btn-success.ml-1.me-1.disabled(id='process_btn') Process
